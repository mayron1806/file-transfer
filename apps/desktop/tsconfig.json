{
  "compilerOptions": {
    "target": "ES6",
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "jsx": "react-jsx",
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./src/renderer/*"],
      "@/components/*": ["src/renderer/components/*"],
      "@/lib/*": ["src/renderer/lib/*"],
      "@/assets/*": ["assets/*"],

    }
  },
  "include": ["src/**/*"]
}
